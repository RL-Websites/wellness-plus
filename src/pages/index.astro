---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<Header />

	<!--=====|| Main Section Start ||=====-->
	<main class="page">
		<!--===|| Banner Section Start ||===-->
		<section class="home-banner">
			<div class="container">
				<div class="home-banner__content">
					<h1 class="section-title__lg"
						>Ready to <span class="text-primary">Significantly Boost</span> Your
						Revenue?</h1
					>
					<p
						>Integrate in-demand prescription wellness treatments, including
						cutting-edge weight loss solutions, to expand your services and
						attract more high-value clients to your med spa or gym.</p
					>
				</div>
				<div class="home-banner__img">
					<img src="assets/img/banner.png" alt="Home Banner" />
				</div>
				<div class="home-banner__action">
					<button class="theme-btn theme-btn__secondary">Request a Demo</button>
				</div>
			</div>
			<!--===|| Banner Section End ||===-->
		</section>
		<!--=====|| Main Section End ||=====-->

		<Footer />
	</main>
</Layout>
