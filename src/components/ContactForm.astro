<div class="form-card">
	<form>
		<div class="row mb-4">
			<div class="col">
				<label for="firstName" class="form-card__label">First Name</label>
				<input type="text" class="form-control" id="firstName" />
			</div>
			<div class="col">
				<label for="lastName" class="form-card__label">Last Name</label>
				<input type="text" class="form-control" id="lastName" />
			</div>
		</div>

		<div class="mb-4">
			<label for="email" class="form-card__label">Email</label>
			<input type="email" class="form-control" id="email" />
		</div>

		<div class="mb-4">
			<label for="phone" class="form-card__label">Phone Number</label>
			<input type="tel" class="form-control" id="phone" />
		</div>

		<div class="mb-4">
			<label for="business" class="form-card__label">Business Type</label>
			<input type="text" class="form-control" id="business" />
		</div>

		<div class="mb-4">
			<label for="message" class="form-card__label">Message</label>
			<textarea class="form-control" id="message" rows="4"></textarea>
		</div>

		<div class="text-end">
			<button class="theme-btn theme-btn__secondary fs-18 text-capitalize"
				>Send Message</button
			>
		</div>
	</form>
</div>
